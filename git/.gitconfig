[include]
	path = ~/.gitconfig.local

[init]
	defaultBranch = master

[core]
	editor = vim
	pager = less

[diff]
	tool = vimdiff

[alias]
	b = branch
	
	s = status

	c = commit
	cmm = commit -m
        cam = commit --amend -m

        res = reset HEAD --

	l = log --oneline
	lg = log --oneline --graph --decorate

	m = merge

	co = checkout
	com = checkout master
	cob = checkout branch

	pso = push origin
	pom = push origin master

	r = remote
	rv = remote -v
